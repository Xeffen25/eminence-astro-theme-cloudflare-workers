{
	"name": "eminence-astro-theme-cloudflare-workers",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"astro": "astro",
		"dev": "wrangler types && astro dev",
		"build": "wrangler types && astro build",
		"preview": "wrangler types && astro build && wrangler dev",
		"deploy": "wrangler types && astro build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"format:fix": "prettier . --write",
		"format:check": "prettier . --check",
		"lint:fix": "eslint . --fix",
		"lint:check": "eslint .",
		"upgrade": "npx @astrojs/upgrade && ncu -u && npm install",
		"prepare": "husky",
		"commit": "cz"
	},
	"lint-staged": {
		"*": [
			"eslint",
			"prettier --check"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
		}
	},
	"dependencies": {
		"@astrojs/cloudflare": "^12.6.3",
		"@astrojs/sitemap": "^3.4.2",
		"@tailwindcss/vite": "^4.1.11",
		"astro": "^5.13.2",
		"astro-robots-txt": "^1.0.0",
		"astro-seo-schema": "^5.1.0",
		"tailwindcss": "^4.1.11"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/node": "^24.2.1",
		"@typescript-eslint/parser": "^8.39.0",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.33.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"npm-check-updates": "^18.0.2",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"wrangler": "^4.28.1"
	}
}
