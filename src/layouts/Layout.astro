---
import "@/styles/global.css";

import Seo from "@/components/seo/Seo.astro";
import SkipToMain from "@/components/util/SkipToMain.astro";

type Props = SeoPage;
---

<!doctype html>
<html lang={Astro.currentLocale}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Astro</title>
		<slot name="head" />
		<Seo {...Astro.props} />
	</head>
	<body>
		<slot name="body-start" />
		<SkipToMain />
		<main id="main" role="main">
			<slot />
		</main>
		<slot name="body-end" />
	</body>
</html>
